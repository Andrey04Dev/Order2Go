@using Proyecto_Order2Go.Helpers
@using Proyecto_Order2Go.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto_Order2Go</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Proyecto_Order2Go</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">


                    @if (!User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Registrar">Registrar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Iniciar Sesión</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        switch (SessionHelpers.GetRole(User))
                        {
                            case "Administrador":
                                <ul class="nav navbar-nav ml-auto">
                                    <li class="nav-item">
                                        <a href="#" class="nav-link text-dark font-weight-bolder">Bienvenido, @SessionHelpers.GetName(User).</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Salir</a>
                                    </li>
                                </ul>
                                <ul class="nav navbar-nav ">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Modulos" asp-action="AgregarComercio">Agregar Comercio</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Modulos" asp-action="AgregarOperador">Agregar Operador</a>
                                    </li>
                                </ul>
                                break;
                            case "Operador":
                                <ul class="nav navbar-nav ml-auto">
                                    <li class="nav-item">
                                        <a href="#" class="nav-link text-dark font-weight-bolder">Bienvenido, @SessionHelpers.GetName(User).</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Salir</a>
                                    </li>
                                </ul>
                                <ul class="nav navbar-nav ">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-route-id="@SessionHelpers.GetNameIdentifier(User)" asp-controller="Modulos" asp-action="CargarProductos">Ver Productos</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-route-id="@SessionHelpers.GetNameIdentifier(User)" asp-controller="Modulos" asp-action="AgregarProducto">Agregar Producto</a>
                                    </li>
                                </ul>
                                break;
                            case "Usuario":
                                <ul class="nav navbar-nav ml-auto">
                                    <li class="nav-item">
                                        <a href="#" class="nav-link text-dark font-weight-bolder">Bienvenido, @SessionHelpers.GetName(User).</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Salir</a>
                                    </li>
                                </ul>
                                <ul class="nav navbar-nav ">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area=""  asp-controller="Usuario" asp-action="Index">Comercios</a>
                                    </li>
                                </ul>
                                break;
                        }
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="alert alert-info">
            Usuario Autenticado:
            <ul>
                <li>@SessionHelpers.GetNameIdentifier(User)</li>
                <li>@SessionHelpers.GetName(User)</li>
                <li>@SessionHelpers.GetValue(User, "Dato")</li>
                <li>@SessionHelpers.GetEmail(User)</li>
                <li>@SessionHelpers.GetRole(User)</li>
            </ul>
        </div>
    }
    else
    {
        <span class="alert alert-danger">
            Usuario no autentificado
        </span>
    }
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Proyecto_Order2Go - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
